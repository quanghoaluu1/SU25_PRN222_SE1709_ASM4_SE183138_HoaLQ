@model SchoolMedical.Repositories.HoaLQ.Models.HealthProfilesHoaLq

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-4">
    <div class="card shadow border-danger">
        <div class="card-header bg-danger text-white p-4">
            <h3 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Are you sure you want to delete this?</h3>
            <p class="mb-0">Please review the complete details below before permanently deleting this record.</p>
        </div>
        <div class="card-body p-4">

            <h5 class="text-danger fw-bold border-bottom pb-2 mb-3"><i class="fas fa-user-circle me-2"></i>Basic Information</h5>
            <div class="row mb-3">
                 <div class="col-md-4">
                    <p class="text-muted mb-0">Student</p>
                    <p class="fw-bold fs-5">@Html.DisplayFor(model => model.Student.StudentFullName)</p>
                </div>
                <div class="col-md-4">
                    <p class="text-muted mb-0">@Html.DisplayNameFor(model => model.DateOfBirth)</p>
                    <p class="fw-bold">@Model.DateOfBirth.Value.ToString("dd MMMM, yyyy")</p>
                </div>
                <div class="col-md-4">
                    <p class="text-muted mb-0">@Html.DisplayNameFor(model => model.Sex)</p>
                    <p class="fw-bold">
                        @if (Model.Sex)
                        {
                            <span class="text-primary"><i class="fas fa-mars me-1"></i>Nam</span>
                        }
                        else
                        {
                            <span class="text-danger"><i class="fas fa-venus me-1"></i>Ná»¯</span>
                        }
                    </p>
                </div>
            </div>

            <h5 class="text-danger fw-bold border-bottom pb-2 my-3"><i class="fas fa-ruler-combined me-2"></i>Vitals & Measurements</h5>
            <dl class="row mb-3">
                <dt class="col-sm-3 col-md-2">@Html.DisplayNameFor(model => model.Weight)</dt>
                <dd class="col-sm-9 col-md-4">@Html.DisplayFor(model => model.Weight) kg</dd>

                <dt class="col-sm-3 col-md-2">@Html.DisplayNameFor(model => model.Height)</dt>
                <dd class="col-sm-9 col-md-4">@Html.DisplayFor(model => model.Height) cm</dd>

                <dt class="col-sm-3 col-md-2">@Html.DisplayNameFor(model => model.BloodPressure)</dt>
                <dd class="col-sm-9 col-md-4">@Html.DisplayFor(model => model.BloodPressure)</dd>

                 <dt class="col-sm-3 col-md-2">@Html.DisplayNameFor(model => model.BloodType)</dt>
                <dd class="col-sm-9 col-md-4"><span class="badge bg-danger rounded-pill px-2 py-1">@Html.DisplayFor(model => model.BloodType)</span></dd>

                <dt class="col-sm-3 col-md-2">@Html.DisplayNameFor(model => model.Sight)</dt>
                <dd class="col-sm-9 col-md-4">@Html.DisplayFor(model => model.Sight)</dd>

                <dt class="col-sm-3 col-md-2">@Html.DisplayNameFor(model => model.Hearing)</dt>
                <dd class="col-sm-9 col-md-4">@Html.DisplayFor(model => model.Hearing)</dd>
            </dl>

            <h5 class="text-danger fw-bold border-bottom pb-2 my-3"><i class="fas fa-notes-medical me-2"></i>Medical Condition</h5>
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Allergy)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Allergy)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ChronicDisease)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ChronicDisease)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.MedicalHistory)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.MedicalHistory)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CurrentMedical)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CurrentMedical)</dd>
            </dl>
        </div>
        <div class="card-footer bg-light text-end p-3">
             <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i> Back to List
             </a>
            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteConfirmModal">
                <i class="fas fa-trash-alt me-1"></i> Delete
            </button>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteModalLabel"><i class="fas fa-exclamation-triangle text-danger me-2"></i>Confirmation</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Do you really want to delete this health profile? This process cannot be reversed.
      </div>
      <div class="modal-footer">
        <form asp-action="Delete" class="mb-0">
            <input type="hidden" asp-for="HealthProfileHoaLqid" />
            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-danger">Yes, Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>

