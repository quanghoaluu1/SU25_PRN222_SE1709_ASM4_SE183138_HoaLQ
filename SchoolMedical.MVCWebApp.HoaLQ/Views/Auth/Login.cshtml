@model LoginViewModel

@{
}

<div class="container">
    <div class="row justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="col-md-6 col-lg-5">
            
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h4 class="mb-0">
                        <i class="bi bi-box-arrow-in-right"></i>
                        Đăng Nhập Hệ Thống
                    </h4>
                </div>
                <div class="card-body p-4">
                    <p class="text-muted text-center mb-4">Vui lòng nhập thông tin để tiếp tục</p>
                    
                    <form asp-action="Login" method="post">
                        
                        @* Hiển thị lỗi chung từ ModelState *@
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Username" class="form-label fw-bold"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-person"></i></span>
                                <input asp-for="Username" class="form-control" placeholder="Tên đăng nhập"/>
                            </div>
                            <span asp-validation-for="Username" class="text-danger small mt-1"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label fw-bold"></label>
                             <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                <input asp-for="Password" class="form-control" placeholder="Mật khẩu"/>
                            </div>
                            <span asp-validation-for="Password" class="text-danger small mt-1"></span>
                        </div>
                        
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="form-check">
                                <input asp-for="RememberMe" class="form-check-input" />
                                <label asp-for="RememberMe" class="form-check-label"></label>
                            </div>
                            <a href="#" class="small">Quên mật khẩu?</a>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Đăng nhập</button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
